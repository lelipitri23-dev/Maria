            // Set Initial
            let currentIndex = Math.floor(Math.random() * backgrounds.length);
            bgContainer.style.backgroundImage = `url(${backgrounds[currentIndex]})`;

            // Change every 7 seconds
            setInterval(() => {
                currentIndex = (currentIndex + 1) % backgrounds.length;
